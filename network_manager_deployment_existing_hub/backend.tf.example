terraform {
  backend "azurerm" {
    # Resource group name where the storage account exists
    resource_group_name = "tfstate-rg"
    
    # Name of the Azure Storage Account
    storage_account_name = "tfstateaccount"
    
    # Name of the blob container
    container_name = "tfstate"
    
    # State file name within the container
    key = "terraform.tfstate"
    
    # Subscription ID (optional)
    # subscription_id = "00000000-0000-0000-0000-000000000000"
    
    # Access keys can be provided:
    # 1. As environment variable: ARM_ACCESS_KEY
    # 2. Using az login
    # 3. Directly here (not recommended for security):
    # access_key = "storage_account_access_key"
    
    # Use MSI authentication (optional)
    # use_msi = true
    
    # Endpoint suffix for sovereign clouds (optional)
    # environment = "public"
  }
} 